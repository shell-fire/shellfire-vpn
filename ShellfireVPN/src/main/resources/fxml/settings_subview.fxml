            <CheckBox fx:id="startOnBoot" layoutX="8.0" layoutY="92.0" mnemonicParsing="false" onAction="#handleStartOnBoot" prefHeight="18.0" prefWidth="290.0" text="Start on boot" AnchorPane.leftAnchor="8.0" />
