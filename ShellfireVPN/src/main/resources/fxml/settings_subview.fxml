                  <Font size="14.0" />
               </font>
            </RadioButton>
            <RadioButton fx:id="WireguardRadioButton" layoutX="10.0" layoutY="330.0" mnemonicParsing="false" text="Wireguard (fastest)" toggleGroup="$networkTypeToggleGroup">
